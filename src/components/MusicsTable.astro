---
import Time from "../icons/Time.astro";
import { type Song } from "../lib/data";

interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<div class="px-6 pt-4">
  <table class="table-auto text-left min-w-full divide-y divide-slate-500/50">
    <thead>
      <tr class="text-sm text-gray-400 font-light">
        <th class="px-4 py-2">#</th>
        <th class="px-4 py-2">Título</th>
        <th class="px-4 py-2">Álbum</th>
        <th class="px-4 py-2">
          <Time />
        </th>
      </tr>
    </thead>
    <tbody>
      <tr class="h-[15px]"></tr>
      {
        songs.map((song, index) => (
          <tr
            class={`text-gray-400 hover:bg-zinc-800 overflow-hidden transition duration-100 cursor-pointer`}
          >
            <td class="px-4 py-2 rounded-tl-lg rounded-bl-lg w-14">
              {index + 1}
            </td>
            <td class="px-4 py-2 flex gap-x-2">
              <picture>
                <img
                  class="w-[45px] h-[45px] rounded-[3px]"
                  src={song.image}
                  alt={`Cover of ${song.title}`}
                />
              </picture>
              <div class="flex flex-col">
                <p class="text-white truncate">{song.title}</p>
                <p class="text-neutral-400 text-sm truncate">
                  {song.artists.join(", ")}
                </p>
              </div>
            </td>
            <td class="px-4 py-2">{song.album}</td>
            <td class="px-4 py-2 rounded-tr-lg rounded-br-lg">
              {song.duration}
            </td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
